public class App {
    public static void main(String[] args) throws Exception {

        // Conditional Structure
        boolean ihaveNoMoney = false;

        if (ihaveNoMoney) {
            System.out.println("Ask your parents to drive you to NU");
        } else {
            // Step 1
            walkLRT();

            // Step 2
            rideLRT();

            // Step 3
            walk();

          
        }

    }

    static void walkLRT() {
        System.out.println("Walk from house to LRT");
        System.out.println("");
    }

    static void rideLRT() {
        System.out.println("Ride LRT to legarda station");
        System.out.println("Exit Lrt station");
    }

    static void walk() {
        System.out.println("walk from legarda station to NU");
       
    }

   
}
