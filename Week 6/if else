public class App {
    public static void main(String[] args) throws Exception {

        // Conditional Structure
        boolean suspended = true;
        boolean holiday = false;
        if (suspended) {
          
            System.out.println("Stay at home");
        } 
        else if (holiday) { 
          
            System.out.println ("Spend time with family");
        }
        else {
            // Step 1
            walkLRT();

            // Step 2
            rideLRT();

            // Step 3
            walk();

          
        }

    }

    static void walkLRT() {
        System.out.println("Walk from house to LRT");
        System.out.println("");
    }

    static void rideLRT() {
        System.out.println("Ride LRT to legarda station");
        System.out.println("Exit Lrt station");
    }

    static void walk() {
        System.out.println("walk from legarda station to NU");
       
    }

   
}
